**/.DS_Store

{/* OS related files */}
{{- if ne .chezmoi.os "darwin" }}
Applications
{{- else if ne .chezmoi.os "linux" }}
etc
usr
opt
{{- end }}

{/* Window manager and WM-related files */}
{{- if ne .guiServer "W" }}
usr/share/wayland-sessions/dyland.desktop
etc/greetd
{{- end }}

{/* Browser files */}
{{- if ne .osid "linux-gentoo" }}
usr/lib64/firefox
opt/zen-browser
{{- end }}
{{- if ne .osid "linux-arch" }}
usr/lib/firefox
opt/zen-browser-bin
{{- end }}
{{- if ne .browser "Z" }}
usr/lib/firefox
usr/lib64/firefox
{{- else if ne .browser "F" }}
opt/zen-browser
opt/zen-browser-bin
{{- end }}

{/* Linux related files */}
{{- if not (eq .osid "linux-arch" "linux-ubuntu") }}
etc/systemd
etc/vconsole.conf
{{- end }}
{{- if ne .osid "linux-arch" }}
etc/makepkg.conf
etc/pacman.d
etc/pacman.conf
{{- end }}
{{- if ne .osid "linux-gentoo" }}
etc/ntp
etc/portage
{{- end }}

{/* Machine type files */}
{{- if not (eq .kind "pc" "laptop") }}
etc/default/grub
{{- end }}
{{- if or (ne .kind "office") (ne .company "F1") }}
etc/ca-certificates
etc/NetworkManager/system-connections/Office.nmconnection
etc/NetworkManager/system-connections/Office-Project.nmconnection
{{- end }}
{{- if ne .kind "pc" }}
etc/NetworkManager/system-connections/Dynamo.nmconnection
{{- end }}
