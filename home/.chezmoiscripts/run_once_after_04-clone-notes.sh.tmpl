#!/usr/bin/env bash
source {{ .chezmoi.sourceDir }}/../scripts/lib/dybatpho/init.sh
dybatpho::register_err_handler

{{- if eq .chezmoi.os "android" }}
if ! dybatpho::is dir ~/storage/shared/Documents/Notes; then
  dybatpho::progress "Clone notes"
  mkdir -p ~/storage/shared/Documents/Notes
  cd ~/storage/shared/Documents/Notes
  git init
  git remote add ssh git@gitlab.com:dynamo.foss/notes.git
  git pull ssh main
  git remote set-url origin https://gitlab.com/dynamo.foss/notes.git
  dybatpho::success "Clone notes"
fi
{{- end }}
