{{- $configPath := joinPath .chezmoi.homeDir ".config/firefox/profiles" }}
{{- $releaseId := "0" }}
{{- if eq .chezmoi.osRelease.id "gentoo" }}
{{- $releaseId = mozillaInstallHash "/opt/firefox" }}
{{- else }}
{{- $releaseId = mozillaInstallHash "/usr/lib/firefox" }}
{{- end }}

[Profile0]
Name=Personal
IsRelative=0
Path={{- $configPath }}/personal

[Profile1]
Name=Enterprise
IsRelative=0
Path={{- $configPath }}/enterprise

{{- if eq .place "office" }}
[Profile2]
Name=Chat
IsRelative=0
Path={{- $configPath }}/chat
{{- end }}

[General]
StartWithLastProfile=1
Version=2

[Install{{- $releaseId -}}]
{{- if eq .place "office" }}
Default={{- $configPath }}/enterprise
{{- else }}
Default={{- $configPath }}/personal
{{- end }}
Locked=1
