[user]
        {{- $commonSecret := join .chezmoi.sourceDir "../secrets/data/enterprise-ZOO/common.yaml.age" | include | decrypt | fromYaml }}
        {{- $gitSecret := join .chezmoi.sourceDir "../secrets/data/enterprise-ZOO/git.yaml.age" | include | decrypt | fromYaml }}
        email = {{ $commonSecret.account.username }}@{{ $commonSecret.account.domain }}
        # Signing SSH key
        signingkey = ~/.ssh/key/enterprise-ZOO_ed25519.pub
[core]
        # Custom global ignore file
        excludesfile = ~/Working/enterprise/ZOO/.gitignore
{{- range $gitSecret.servers }}
{{-   if and $.preferGitSSH .preferGitSSH }}
[url {{ .ssh | quote }}]
        # Prefer SSH than HTTPS for github
        insteadOf = {{ .https }}
{{-   else }}
[url {{ .https | quote }}]
        # Prefer HTTPS than for github
        insteadOf = {{ .ssh }}
{{-   end }}
{{- end }}
