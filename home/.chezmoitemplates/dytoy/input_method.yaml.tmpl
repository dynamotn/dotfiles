{{- if empty .languages }}
name: ibus
method: os
# https://repology.org/project/ibus-bamboo/versions
# https://repology.org/project/ibus-lotus/versions
# https://repology.org/project/ibus-rime/versions
# https://repology.org/project/ibus-m17n/versions
# https://repology.org/project/mozc/versions
is_essential: true
gentoo:
  packages:
    {{- if has "vi" .languages }}
    - name: app-i18n/ibus-lotus
      repo: dynamo
      url: https://gitlab.com/dynamo-config/distro/gentoo-overlay.git
    {{- end }}
    {{- if has "ja" .languages }}
    - name: app-i18n/mozc
    {{- end }}
    {{- if has "zh" .languages }}
    - name: app-i18n/ibus-rime
    - name: app-i18n/ibus-m17n
    {{- end }}
arch:
  packages:
    {{- if has "vi" .languages }}
    - name: ibus-lotus
    {{- end }}
    {{- if has "ja" .languages }}
    - name: ibus-mozc
    {{- end }}
    {{- if has "zh" .languages }}
    - name: ibus-rime
    - name: ibus-m17n
    {{- end }}
ubuntu:
  packages:
    {{- if has "vi" .languages }}
    - name: ibus-bamboo
      repo: http://ppa.launchpad.net/bamboo-engine/ibus-bamboo/ubuntu
      components: main
      key: 5AD2E0B68A0409AD907D462D36ED424E9659D014
    {{- end }}
    {{- if has "ja" .languages }}
    - name: ibus-mozc
    {{- end }}
    {{- if has "zh" .languages }}
    - name: ibus-rime
    - name: ibus-m17n
    {{- end }}
alpine: # not has packages
termux: # not need to install
macos: # use buitin input
{{- end }}
