name: duf
method: binary
github:
  repo: muesli/duf
  {{- $os := "" }}
  {{- if eq .chezmoi.os "darwin" }}
  {{-   $os = "darwin" }}
  {{- else if eq .chezmoi.os "linux" "android" }}
  {{-   $os = "linux" }}
  {{- end }}
  {{- $arch := "" }}
  {{- if eq .chezmoi.arch "amd64" }}
  {{-   $arch = "x86_64" }}
  {{- else if eq .chezmoi.arch "arm64" }}
  {{-   $arch = "arm64" }}
  {{- end }}
  release_asset:  duf_%1v_{{ $os }}_{{ $arch }}.tar.gz
archive:
  - path: duf
