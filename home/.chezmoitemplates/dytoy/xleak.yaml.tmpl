name: xleak
method: binary
github:
  repo: bgreenwell/xleak
  {{- $os := "linux" }}
  {{- if eq .chezmoi.os "darwin" }}
  {{-   $os := "macos" }}
  {{- end }}
  {{- $arch := "" }}
  {{- if eq .chezmoi.arch "amd64" }}
  {{-   $arch = "x86_64" }}
  {{- else if eq .chezmoi.arch "arm64" }}
  {{-   $arch = "arm64" }}
  {{- end }}
  release_asset: xleak-{{ $os }}-{{ $arch }}.tar.gz
archive:
  - path: xleak
