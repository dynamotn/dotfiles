method: os
# https://repology.org/project/zellij/versions
gentoo:
  packages:
    - name: app-misc/zellij
arch:
  packages:
    - name: zellij
alpine:
  packages:
    - name: zellij
termux:
  packages:
    - name: zellij
macos:
  packages:
