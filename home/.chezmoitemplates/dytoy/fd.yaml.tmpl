name: fd
is_essential: true
{{- if or (eq .chezmoi.os "android" "darwin") (eq .kind "container") }}
# Use package manager for Android, macOS and container environments
# cuz it's essential tool
method: os
# https://repology.org/project/fd-find/versions
arch:
  packages:
    - name: fd
ubuntu:
  packages:
    - name: rust-fd-find
alpine:
  packages:
    - name: fd
termux:
  packages:
    - name: fd
macos:
  packages:
    - name: fd
{{- else }}
method: binary
github:
  repo: sharkdp/fd
  {{- $arch := "" }}
  {{- if eq .chezmoi.arch "amd64" }}
  {{- $arch = "x86_64" }}
  {{- else if eq .chezmoi.arch "arm64" }}
  {{- $arch = "aarch64" }}
  {{- end }}
  release_asset: fd-%v-{{ $arch }}-unknown-linux-gnu.tar.gz
archive:
  - path: fd-%v-{{ $arch }}-unknown-linux-gnu/fd
    strip: 1
  - path: fd-%v-{{ $arch }}-unknown-linux-gnu/fd.1
    strip: 1
    location: $HOME/.local/man/man1
{{- end }}
