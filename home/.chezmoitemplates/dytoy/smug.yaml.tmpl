{{- if eq .terminalMultiplexer "T" }}
name: smug
method: binary
is_essential: true
github:
  repo: ivaaaan/smug
  {{- $os := "" }}
  {{- if eq .chezmoi.os "darwin" }}
  {{- $os = "Darwin" }}
  {{- else if eq .chezmoi.os "linux" }}
  {{- $os = "Linux" }}
  {{- end }}
  {{- $arch := "" }}
  {{- if eq .chezmoi.arch "amd64" }}
  {{- $arch = "x86_64" }}
  {{- else if eq .chezmoi.arch "arm64" }}
  {{- $arch = "arm64" }}
  {{- end }}
  release_asset: smug_%1v_{{ $os }}_{{ $arch }}.tar.gz
archive:
  - path: smug
{{- end }}
