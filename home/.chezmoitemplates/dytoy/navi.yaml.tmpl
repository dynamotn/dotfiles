name: navi
is_essential: true
{{- if or (eq .chezmoi.os "darwin" "android") (and (eq .kind "container") (ne .osid "linux-ubuntu")) }}
# Use package manager for Android, macOS and container environments
# cuz it's essential tool
method: os
# https://repology.org/project/navi/versions
arch:
  packages:
    - name: navi
alpine:
  packages:
    - name: navi
ubuntu:  # container need to use binary method
termux:
  packages:
    - name: navi
macos:
  packages:
    - name: navi
{{- else }}
method: binary
github:
  repo: denisidoro/navi
  {{- if eq .chezmoi.arch "amd64" }}
  release_asset: navi-%v-x86_64-unknown-linux-musl.tar.gz
  {{- else if eq .chezmoi.arch "arm64" }}
  {{- if eq .chezmoi.os "linux" }}
  release_asset: navi-%v-aarch64-unknown-linux-gnu.tar.gz
  {{- end }}
  {{- end }}
archive:
  - path: ./navi
{{- end }}
