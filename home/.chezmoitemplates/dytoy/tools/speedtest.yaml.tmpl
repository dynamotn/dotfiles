name: speedtest
method: binary
github:
  repo: showwin/speedtest-go
  {{- $os := "" }}
  {{- $arch := "" }}
  {{- if eq .chezmoi.os "darwin" }}
  {{- $os = "Darwin" }}
  {{- else if eq .chezmoi.os "linux" }}
  {{- $os = "Linux" }}
  {{- end }}
  {{- if eq .chezmoi.arch "amd64" }}
  {{- $arch = "x86_64" }}
  {{- else if eq .chezmoi.arch "arm64" }}
  {{- $arch = "arm64" }}
  {{- end }}
  release_asset: speedtest-go_%1v_{{ $os }}_{{ $arch }}.tar.gz
archive:
  paths:
    - speedtest-go
  hook:
    after: |
      mv ~/.local/bin/speedtest{-go,}
