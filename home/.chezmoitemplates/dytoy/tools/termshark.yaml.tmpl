name: termshark
method: binary
github:
  repo: gcla/termshark
  version: latest
  {{- $os := "" }}
  {{- if eq .chezmoi.os "darwin" }}
  {{- $os = "macOS" }}
  {{- else if eq .chezmoi.os "linux" "android" }}
  {{- $os = "linux" }}
  {{- end }}
  {{- $arch := "" }}
  {{- if eq .chezmoi.arch "amd64" }}
  {{- $arch = "x64" }}
  {{- else if eq .chezmoi.arch "arm64" }}
  {{- $arch = "arm64" }}
  {{- end }}
  release_asset: termshark_%1v_{{ $os }}_{{ $arch }}.tar.gz
archive:
  - path: termshark_%1v_{{ $os }}_{{ $arch }}/termshark
    strip: 1
