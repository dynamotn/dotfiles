name: gh
method: binary
github:
  repo: cli/cli
  version: latest
  release_asset: gh_%1v_linux_{{ .chezmoi.arch }}.tar.gz
archive:
  - path: gh_%1v_linux_{{ .chezmoi.arch }}/bin/gh
    strip: 2
  - path: gh_${version:1}_linux_{{ .chezmoi.arch }}/share/man/man1/*
    strip: 4
    location: "$MAN_DIR/man1"
hook:
  after: |
    gh auth login
    gh extension install dlvhdr/gh-dash
