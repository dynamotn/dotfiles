name: fd
{{- if eq .chezmoi.os "linux" }}
method: binary
github:
  repo: sharkdp/fd
  version: latest
  {{- if eq .chezmoi.arch "amd64" }}
  release_asset: fd-%v-x86_64-unknown-linux-gnu.tar.gz
  {{- else if eq .chezmoi.arch "arm64" }}
  release_asset: delta-%v-aarch64-unknown-linux-gnu.tar.gz
  {{- end }}
archive:
  strip_components: 1
  paths:
  {{- if eq .chezmoi.arch "amd64" }}
    - fd-%v-x86_64-unknown-linux-gnu/fd
  {{- else if eq .chezmoi.arch "arm64" }}
    - fd-%v-aarch64-unknown-linux-gnu/fd
  {{- end }}
  hook:
    after: |
      tar $param -C "$MAN_DIR/man1" "fd-$version-x86_64-unknown-linux-gnu/fd.1"
      if [ -d ~/.config/fish/completions ]; then
        tar $param --strip=2 -C ~/.config/fish/completions fd-$version-x86_64-unknown-linux-gnu/autocomplete/fd.fish
      fi
      if [ -d ~/Working/personal/fish/caran/completions ]; then
        tar $param --strip=2 -C ~/Working/personal/fish/caran/completions fd-$version-x86_64-unknown-linux-gnu/autocomplete/fd.fish
      fi
{{- else if eq .chezmoi.os "android" }}
method: os
termux:
  packages:
    - name: fd
{{- end }}
