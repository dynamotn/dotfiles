name: bat
{{- if eq .chezmoi.os "linux" }}
method: binary
github:
  repo: sharkdp/bat
  version: latest
  {{- if eq .chezmoi.arch "amd64" }}
  release_asset: bat-%v-x86_64-unknown-linux-gnu.tar.gz
  {{- else if eq .chezmoi.arch "arm64" }}
  release_asset: bat-%v-aarch64-unknown-linux-gnu.tar.gz
  {{- end }}
archive:
  strip_components: 1
  paths:
  {{- if eq .chezmoi.arch "amd64" }}
    - bat-%v-x86_64-unknown-linux-gnu/bat
  {{- else if eq .chezmoi.arch "arm64" }}
    - bat-%v-aarch64-unknown-linux-gnu/bat
  {{- end }}
  hook:
    after: |
      tar $param -C "$MAN_DIR/man1" "bat-$version-x86_64-unknown-linux-gnu/bat.1"
      if [ -d ~/.config/fish/completions ]; then
        tar $param --strip=2 -C ~/.config/fish/completions bat-$version-x86_64-unknown-linux-gnu/autocomplete/bat.fish
      fi
      if [ -d ~/Working/personal/fish/caran/completions ]; then
        tar $param --strip=2 -C ~/Working/personal/fish/caran/completions bat-$version-x86_64-unknown-linux-gnu/autocomplete/bat.fish
      fi
{{- else if eq .chezmoi.os "android" }}
method: os
termux:
  packages:
    - name: bat
{{- end }}
