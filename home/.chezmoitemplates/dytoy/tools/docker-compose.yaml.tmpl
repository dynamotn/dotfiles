{{- if ne .chezmoi.os "android" }}
# Can't use docker and container on Android
name: docker-compose
method: binary
github:
  repo: docker/compose
  {{- $arch := "" }}
  {{- if eq .chezmoi.arch "amd64" }}
  {{-   $arch = "x86_64" }}
  {{- else if eq .chezmoi.arch "arm64" }}
  {{-   $arch = "aarch64" }}
  {{- end }}
  release_asset: docker-compose-{{ .chezmoi.os }}-{{ $arch }}
{{- end }}
