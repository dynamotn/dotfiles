{{- if eq .guiWinManager "H" }}
name: hyprland
method: os
is_essential: true
gentoo:
  packages:
    - name: gui-wm/hyprland
      accept_keywords: |-
        gui-wm/hyprland ~amd64
        dev-util/hyprwayland-scanner ~amd64
        dev-libs/wayland-protocols ~amd64
        gui-libs/aquamarine ~amd64
        gui-libs/hyprutils ~amd64
        dev-cpp/sdbus-c++ ~amd64
    - name: x11-libs/xcb-util
    {{- if ne .place "home" }}
    - name: gui-apps/hypridle
      accept_keywords: |-
        gui-apps/hypridle ~amd64
    {{- end }}
arch:
  packages:
    {{- if eq .guiDriver "N" }}
    - name: hyprland-nvidia-git
    {{- else }}
    - name: hyprland
    {{- end }}
    - name: xdg-desktop-portal-wlr
    - name: xdg-desktop-portal-hyprland
    {{- if ne .place "home" }}
    - name: hypridle
    {{- end }}
    - name: cpio
    - name: cmake
    - name: meson
{{- else if eq .guiWinManager "A" }}
name: aerospace
is_essential: true
method: os
macos:
  packages:
    - name: nikitabobko/tap/aerospace
      is_cask: true
{{- end }}
