{{- if eq .guiServer "X" }}
name: awesome
method: os
is_essential: true
gentoo:
  packages:
    - name: x11-wm/awesome
arch:
  packages:
    - name: awesome-git
ubuntu:
  packages:
    - name: awesome
{{- else if eq .guiServer "W" }}
name: hyprland
method: os
is_essential: true
gentoo:
  packages:
    - name: gui-wm/hyprland
    - name: gui-libs/xdg-desktop-portal-wlr
arch:
  packages:
    {{- if eq .guiDriver "N" }}
    - name: hyprland-nvidia-git
    {{- else }}
    - name: hyprland
    {{- end }}
    - name: xdg-desktop-portal-wlr
    - name: xdg-desktop-portal-hyprland
{{- end }}
