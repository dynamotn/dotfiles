name: amass
method: binary
github:
  repo: owasp-amass/amass
  {{- $os := "" }}
  {{- if eq .chezmoi.os "darwin" }}
  {{- $os = "Darwin" }}
  {{- else if eq .chezmoi.os "linux" "android" }}
  {{- $os = "Linux" }}
  {{- end }}
  release_asset: amass_{{ $os }}_{{ .chezmoi.arch }}.zip
archive:
  - path: amass_{{ $os }}_{{ .chezmoi.arch }}/amass
    strip: 1
