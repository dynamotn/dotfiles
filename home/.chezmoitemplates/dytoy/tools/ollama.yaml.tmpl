name: ollama
method: os
gentoo:
  packages:
    - name: app-misc/ollama
  hook:
    after: |-
      sudo rc-update add ollama default
      sudo rc-service ollama start
arch:
  packages:
    {{- if eq .guiDriver "N" }}
    - name: ollama-cuda
    {{- else if eq .guiDriver "A" }}
    - name: ollama-rocm
    {{- else }}
    - name: ollama
    {{- end }}
  hook:
    after: |-
      sudo systemctl enable --now ollama
macos:
  packages:
    - name: ollama
