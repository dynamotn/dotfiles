name: eza
is_essential: true
{{- if or (eq .chezmoi.os "android" "darwin") (and (eq .kind "container") (ne .osid "linux-ubuntu")) }}
# Use package manager for Android, macOS and container environments
# cuz it's essential tool
method: os
# https://repology.org/project/eza/versions
arch:
  packages:
    - name: eza
ubuntu: # container need to use binary method
alpine:
  packages:
    - name: eza
termux:
  packages:
    - name: eza
macos:
  packages:
    - name: eza
{{- else if eq .chezmoi.os "linux" }}
method: binary
github:
  repo: eza-community/eza
  {{- $arch := "" }}
  {{- if eq .chezmoi.arch "amd64" }}
  {{- $arch = "x86_64" }}
  {{- else if eq .chezmoi.arch "arm64" }}
  {{- $arch = "aarch64" }}
  {{- end }}
  release_asset: eza_{{ $arch }}-unknown-linux-gnu.tar.gz
archive:
  - path: ./eza
{{- end }}
