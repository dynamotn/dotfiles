name: stripe
method: binary
github:
  repo: stripe/stripe-cli
  {{- $os := "" }}
  {{- if eq .chezmoi.os "darwin" }}
  {{-   $os = "mac-os" }}
  {{- else if eq .chezmoi.os "linux" "android" }}
  {{-   $os = "linux" }}
  {{- end }}
  {{- $arch := "" }}
  {{- if eq .chezmoi.arch "amd64" }}
  {{-   $arch = "x86_64" }}
  {{- else if eq .chezmoi.arch "arm64" }}
  {{-   $arch = "arm64" }}
  {{- end }}
  release_asset: stripe_%1v_{{ $os }}_{{ $arch }}.tar.gz
archive:
  - path: stripe
