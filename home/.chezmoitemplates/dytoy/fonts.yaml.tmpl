{{- if ne .guiServer "0" }}
name: fonts
is_essential: true
method: os
gentoo:
  packages:
    - name: media-fonts/roboto
    - name: media-fonts/noto
    - name: media-fonts/noto-cjk
    - name: media-fonts/noto-emoji
arch:
  packages:
    - name: ttf-roboto
    - name: noto-fonts
    - name: noto-fonts-cjk
    - name: noto-fonts-emoji
ubuntu:
  packages:
    - name: fonts-roboto
    - name: fonts-noto
    - name: fonts-noto-cjk
    - name: fonts-noto-color-emoji
macos:
  packages:
    - name: font-roboto
      type: cask
    - name: font-noto-serif
      type: cask
    - name: font-noto-serif-cjk
      type: cask
    - name: font-noto-sans-cjk
      type: cask
    # Not need Noto Color Emoji, use builtin Apple Color Emoji
{{- end }}
