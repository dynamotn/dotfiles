.mozilla
.zen
.thunderbird
{{- else }}
Library/Application Support/Firefox
Library/Application Support/zen
Library/thunderbird
{{- end }}
{{/* Based on type of browser */}}
{{- if ne .browser "F" }}
.mozilla
Library/Application Support/Firefox
{{- else if ne .browser "Z" }}
.zen
Library/Application Support/zen
{{- end }}
{{- $numberOfRunningProcess := 0 }}
{{- if eq .chezmoi.os "linux" }}
{{-   $numberOfRunningProcess = 1 }}
{{- end }}
{{- if empty .browser }}
.config/tridactyl
.mozilla
.zen
.config/firefox
.local/bin/dyfox
{{- else }}
{{/* Ignore when running */}}
{{-   $settingsFirefox := includeTemplate "firefox/settings.yaml.tmpl" . | fromYaml }}
{{-   $processFirefox := printf "%s/%s" $settingsFirefox.installFolder $settingsFirefox.processFile }}
{{-   if gt (output "bash" "-c" (printf "pgrep -f %s | wc -l" $processFirefox) | trim | int) $numberOfRunningProcess }}
.config/firefox
.mozilla
.zen
Library/Application Support/Firefox
Library/Application Support/zen
{{-   end }}
{{- end }}
{{/* Based on type of mail client */}}
{{- if empty .mailClient }}
.thunderbird
.config/thunderbird
.local/bin/dybird
{{- else }}
{{/* Ignore when running */}}
{{-   $settingsThunderbird := includeTemplate "thunderbird/settings.yaml.tmpl" . | fromYaml }}
{{-   $processThunderbird := printf "%s/%s" $settingsThunderbird.installFolder $settingsThunderbird.processFile }}
{{-   if gt (output "bash" "-c" (printf "pgrep -f %s | wc -l" $processThunderbird) | trim | int) $numberOfRunningProcess }}
.config/thunderbird
.thunderbird
Library/thunderbird
{{-   end }}
{{- end }}

